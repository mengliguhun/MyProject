<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"

    tools:context="com.example.administrator.myproject.CustomViewsActivity">
    <com.example.administrator.myproject.view.CoustomView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        />
    <FrameLayout
        android:layout_width="244dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone">
        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:cursorVisible="false"
            android:textColor="@android:color/transparent"
            android:inputType="number"/>
        <com.example.administrator.myproject.view.PasswordInputView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>
    <com.example.administrator.myproject.view.BezierView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>
