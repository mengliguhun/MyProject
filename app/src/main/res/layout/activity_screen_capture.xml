<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <com.example.administrator.myproject.view.BasicGraffitiView
        android:id="@+id/graffiti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/close_btn"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_margin="15dp"
        android:background="@mipmap/close" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="04:00"/>

        <FrameLayout
            android:id="@+id/record"
            android:layout_marginTop="25dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            >
            <ImageView
                android:id="@+id/recording_bg"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@mipmap/recording_bg"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <com.example.administrator.myproject.view.CustomProgressBar
                android:id="@+id/custom_progressbar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/recorder_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/recorder_btn"
                android:visibility="visible"/>

        </FrameLayout>
        <CheckBox
            android:id="@+id/paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/checkbox_selector"/>

    </LinearLayout>

    <TextView
        android:id="@+id/count_down"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="50sp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="3"
        android:gravity="center"
        android:background="@drawable/shape_corner_5_black_70"
        android:visibility="gone"/>

</RelativeLayout>